<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Option</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<p class="link"><%= link_to "Show",book_path(@book.id) %></p>
<p class="link">|</p>
<p class="link"><%= link_to "Back",books_path %></p>
