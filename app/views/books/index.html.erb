<% if @book.errors.any? %>
  <div>
    <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h2>User info</h2>
<% if user_signed_in? %>
　<p><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
　　<table>
　　 <tbody>
       <tr>
         <th>name</th>
         <th><%= current_user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= current_user.introduction %></th>
       </tr>
  　 </tbody>
  　</table>
<% end %>
<h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Option</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
      <% @books.each do |book| %>
      <tr>
          <th><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></th>
          <th><%= link_to book.title, book_path(book.id) %></th>
          <th><%= book.body %></th>
      </tr>
      <% end %>
  </tbody>
</table>
