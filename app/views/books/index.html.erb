<% if @book.errors.any? %>
  <div>
    <h3 class="text-danger"><%= @book.errors.count %>error prohibited this book from being saved:</h3>
    <ul class="text-danger">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= render partial: 'list',locals:{ book: @book, user: @user} %>
<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
      <% @books.each do |book| %>
      <tr>
          <th><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></th>
          <th><%= link_to book.title, book_path(book.id) %></th>
          <th><%= book.body %></th>
      </tr>
      <% end %>
  </tbody>
</table>
