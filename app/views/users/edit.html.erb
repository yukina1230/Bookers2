<h1>User info</h1>
<%= form_with model:@user, local:true do |f| %>
  <label>Name</label><br />
  <%= f.text_field :name %><br />
  <label for="inputImage">Image</label><br />
  <br />
  <label>Introduction</label><br />
  <%= f.text_area :introduction %><br />
  <%= f.submit 'Update User' %>
<% end %>
