<%= render partial: 'books/list', locals:{ book: @book, user: @user} %>
<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
          <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
          <th><%= link_to book.title, book_path(book.id) %></th>
          <th><%= book.body %></th>
      </tr>
    <% end %>
  </tbody>
</table>
</div>