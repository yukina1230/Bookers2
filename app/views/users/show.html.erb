<h2>User info</h2>
<% if user_signed_in? %>
　<p><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg' %></p>
　<table>
　　<tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
  　</tbody>
  </table>
<% end %>
<h2>New book</h2>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
          <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg' %></th>
          <th><%= link_to book.title, book_path(book.id) %></th>
          <th><%= book.body %></th>
      </tr>
    <% end %>
  </tbody>
</table>